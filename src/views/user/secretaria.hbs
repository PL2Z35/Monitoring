<!-- Masthead-->
<header class="masthead bg-primary text-white text-center">
    {{>message}}
    <div class="container d-flex align-items-center flex-column">
        <!-- Masthead Avatar Image-->
        <img class="masthead-avatar mb-5" src="/assets/img/avataaars.svg" alt="..." />
        <!-- Masthead Heading-->
        <h1 class="masthead-heading text-uppercase mb-0">Secretaria</h1>
        <!-- Icon Divider-->
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- Masthead Subheading-->
        <p class="masthead-subheading font-weight-light mb-0">Este usuario sera el encargado de la asignacion de materias y la ceracion de estas.</p>
    </div>
</header>

<!-- Portfolio Section-->
<section class="page-section portfolio" id="portfolio">
    <div class="container">
        <!-- Portfolio Section Heading-->
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">MATERIAS</h2>
        <!-- Icon Divider-->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- Portfolio Grid Items-->
        <div class="row justify-content-center">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addMateria"> Adicionar
            </button>
        </div><br>
        <div class="row justify-content-center">
            <!-- Portfolio Item 1-->
            {{#each materias}}
                <div class="col-md-6 col-lg-4 mb-5">
                <div class="portfolio-item mx-auto" data-bs-toggle="modal" data-bs-target="#Materia{{idmateria}}">
                    <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                        <div class="portfolio-item-caption-content text-center text-white"><i
                            class="fas fa-plus fa-3x"></i></div>
                    </div>
                    <img class="img-fluid" src="/assets/img/cuaderno.png" alt="..." />
                    <h3 class="page-section-heading text-center text-secondary mb-0">{{Materia}}</h3>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

<!-- Portfolio Modals-->
<!-- Portfolio Modal 1-->
<div class="portfolio-modal modal fade" id="addMateria" tabindex="-1" aria-labelledby="portfolioModal1"
    aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header border-0"><button class="btn-close" type="button" data-bs-dismiss="modal"
                    aria-label="Close"></button></div>
            <div class="modal-body text-center pb-5">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <!-- Portfolio Modal - Title-->
                            <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0">Adicionar Materia</h2>
                            <!-- Icon Divider-->
                            <div class="divider-custom">
                                <div class="divider-custom-line"></div>
                                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                                <div class="divider-custom-line"></div>
                            </div>
                            <!-- Portfolio Modal - Text-->
                            {{#if secretaria}}
                            <form action="/user/addMateria" method="POST">
                                <div class="form-floating mb-3">
                                    <input name="Materia" class="form-control" id="phone" type="tel"
                                        placeholder="(123) 456-7890" data-sb-validations="required" />
                                    <label for="phone">Nombre</label>
                                </div>
                                <button class="btn btn-primary btn-xl" id="submitButton" type="submit">Guardar</button>
                                 <button class="btn btn-primary btn-xl" id="submitButton" type="submit">Guardar</button>
                            </form>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

{{#each materias}}
<!-- Portfolio Modal 3-->
<div class="portfolio-modal modal fade" id="Materia{{idmateria}}" tabindex="-1"
    aria-labelledby="portfolioModal1" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header border-0"><button class="btn-close" type="button" data-bs-dismiss="modal"
                    aria-label="Close"></button></div>
            <div class="modal-body text-center pb-5">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <!-- Portfolio Modal - Title-->
                            <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0">{{Materia}}</h2>
                            <!-- Icon Divider-->
                            <div class="divider-custom">
                                <div class="divider-custom-line"></div>
                                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                                <div class="divider-custom-line"></div>
                            </div>
                            <!-- Portfolio Modal - Text-->
                            <form action="/user/asignar/{{idmateria}}" method="POST">
                                <div class="form-floating mb-3">
                                    <select name="idUsuario" class="form-control">
                                        {{#each ../profesores}}
                                            <option type="tel" value={{this.idUsuario}}>{{this.Nombres}}</option>
                                        {{/each}}
                                    </select>
                                    <label for="codigo">Seleccione el profesor asignado</label>
                                </div>
                                <button class="btn btn-primary btn-xl" id="submitButton"
                                    type="submit">Asignar Docente</button>
                                    <button class="btn btn-danger btn-xl" id="submitButton"
                                    type="submit">Borrar Materia</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/each}}

</div>